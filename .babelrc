{
  "env": {

    "development": {

      "presets": [
        "es2015",
        "stage-0"
      ],

      "plugins": [
        "transform-class-properties",
        "transform-decorators-legacy",
        "add-module-exports"
      ],
      "sourceMaps": "inline"
    },

    "production": {

      "presets": [
        "es2015",
        "stage-0"
      ],

      "minified": true,
      "comments": false,

      "plugins": [
        "transform-class-properties",
        "transform-class-constructor-call",
        "transform-decorators-legacy",
        "transform-remove-console", [
          "transform-es2015-classes", {
            "loose": true
          }
        ],
        "transform-proto-to-assign",
        "add-module-exports"
      ]
    }
  }
}
